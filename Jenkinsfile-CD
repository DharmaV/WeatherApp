pipeline {
  agent any
  stages {
    stage('Checkout code') {
        steps {
				checkout([$class: 'GitSCM', branches: [[name: "master"]], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: 'mydockerhub', url: "https://github.com/DharmaV/WeatherApp.git"]]])
            }
        }
    stage('Docker pull images') {
		  steps {
			withDockerRegistry(credentialsId: 'mydockerhub', url:'') {
			  sh 'docker pull dharma/weapp'
			}
		}
    }
    stage('Run') {
		  steps {
			withDockerRegistry(credentialsId: 'mydockerhub', url:'') {
			  sh 'docker run -p 5000:5000 dharma/weapp:latest'
			}
		}
    }
  }
}